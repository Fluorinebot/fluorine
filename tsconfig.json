{
    "compilerOptions": {
        "target": "es2022",
        "lib": ["es2022"],
        "module": "esnext",
        "outDir": "dist",
        "moduleResolution": "node",
        "baseUrl": "src",
        "paths": {
            "#api": ["api/index.ts"],
            "#classes": ["classes/index.ts"],
            "#handlers": ["classes/handlers/index.ts"],
            "#modules": ["classes/modules/index.ts"],
            "#util": ["util/index.ts"],
            "#types": ["types/index.ts"]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true
    }
}
